<%- include('./partials/head.ejs') %> <%- include('./partials/nav.ejs') %>

<div class="sign-form">

  <form action="/auth/login" method="POST">
    <input type="email" placeholder="Email" name="email" />

    <% if(validation!==undefined && validation.param==='email' ){ %>

    <p class="error-msg"><%= validation.msg %></p>
    <% } %> 
    
    <input type="password" placeholder="Password" name="password" id="passwordInput" />
    
    <span id="passwordToggle" class="password-toggle">
      <i class="fas fa-eye"></i>
    </span>
   
   <% if(validation!==undefined && validation.param==='password' ){ %>
    <p class="error-msg"><%= validation.msg %></p>
    <% } %> 

    <button type="submit">Log in</button>

    <div>
      <a class="login-link" href="/auth/login/identify">Forgotten password?</a>
    </div>
    <hr />
    <button type="button"><a href="/auth/register">Create new account</a></button>

  </form>
</div>

<script src="/js/showPassword.js"></script>
<%- include('./partials/footer.ejs') %>